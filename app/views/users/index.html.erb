<h1><%= t('view.user.title.index') %></h1>

<table>
  <thead>
  <tr>
    <th colspan="1"></th>
    <th><%= User.human_attribute_name(:full_name) %></th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.avatar.variant(resize: "20x20") if user.avatar.attached? %>
      </td>
      <td>
        <%= link_to user.full_name, user_path(user) %>
      </td>
      <% if user == current_user %>
        <td><%= link_to t('view.user.link.edit'), edit_user_registration_path %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>

<br>
